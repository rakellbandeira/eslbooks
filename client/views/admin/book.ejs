<%- include('../partials/header') %>

<div class="container">
  <h1>Book Management</h1>
  
  <%- include('../partials/messages') %>
  
  <div class="admin-actions">
    <p class="alert alert-info">
      To add a new book, place the JSON file in the <code>/client/public/assets/books/</code> directory 
      and add a cover image with the same name (but .jpg extension) in <code>/client/public/assets/covers/</code>.
    </p>
    <a href="/admin/dashboard" class="btn btn-secondary">Back to Dashboard</a>
  </div>
  
  <div class="book-list">
    <% if (books && books.length > 0) { %>
      <div class="row">
        <% books.forEach(book => { %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <img src="/assets/covers/<%= book.filename.replace('.json', '.jpg') %>" class="card-img-top" alt="<%= book.title %>">
              <div class="card-body">
                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text"><%= book.description.length > 100 ? book.description.substring(0, 100) + '...' : book.description %></p>
                <p class="card-text"><strong>Level:</strong> <%= book.level %></p>
                <p class="card-text"><strong>Episodes:</strong> <%= book.episodeQuantity %></p>
                <p class="card-text"><small class="text-muted">File: <%= book.filename %></small></p>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="no-books">
        <p>No books available. Add JSON files to the books directory to get started!</p>
      </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>