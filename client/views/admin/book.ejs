<%- include('../partials/header') %>

<div class="container">
  <h1>Manage Books</h1>
  
  <%- include('../partials/messages') %>
  
  <div class="admin-actions">
    <a href="/admin/books/add" class="btn btn-primary">Add New Book</a>
    <a href="/admin/dashboard" class="btn btn-secondary">Back to Dashboard</a>
  </div>
  
  <div class="book-list">
    <% if (books && books.length > 0) { %>
      <div class="row">
        <% books.forEach(book => { %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <img src="<%= book.coverImage %>" class="card-img-top" alt="<%= book.title %>">
              <div class="card-body">
                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text"><%= book.description.length > 100 ? book.description.substring(0, 100) + '...' : book.description %></p>
                <p class="card-text"><strong>Level:</strong> <%= book.level %></p>
                <p class="card-text"><strong>Status:</strong> <%= book.isActive ? 'Active' : 'Inactive' %></p>
                <div class="card-actions">
                  <a href="/admin/books/edit/<%= book._id %>" class="btn btn-primary">Edit</a>
                  <a href="/admin/books/delete/<%= book._id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this book? This action cannot be undone.')">Delete</a>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="no-books">
        <p>No books available. Add some books to get started!</p>
      </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>