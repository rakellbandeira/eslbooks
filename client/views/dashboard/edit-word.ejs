<%- include('../partials/header') %>

<div class="container editWordContainer">
  <h1>Edit Word</h1>
  
  <%- include('../partials/messages') %>
  
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card editWordCard">
        <div class="card-body editWordCardBody">
          <form action="/word-bank/edit/<%= wordBank._id %>" method="POST">
            <div class="form-group">
              <label for="word">Word</label>
              <input type="text" id="word" name="word" class="form-control" value="<%= wordBank.word %>" required>
            </div>
            
            <div class="form-group">
              <label for="translation">Translation</label>
              <input type="text" id="translation" name="translation" class="form-control" value="<%= wordBank.translation %>" required>
            </div>
            
            <div class="form-actions">
              <button type="submit" class="btn btn-primary">Update Word</button>
              <a href="/word-bank" class="btn btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>